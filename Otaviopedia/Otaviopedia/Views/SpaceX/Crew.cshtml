@using Otaviopedia.Models.SPACE_X

@{
    ViewData["Title"] = "Crew";

    List<Crew> crewList = (List<Crew>)ViewData["crew"];
    string sourceAPI = ViewData["sourceAPI"].ToString();
}

<div class="customContainerContent">
    <h4>
        <i class="fa fa-users"></i>
        SpaceX Crew
    </h4>
    <div class="bd-example">
        <div id="carouselSpaceXCrew" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselSpaceXCrew" data-slide-to="0" class="active"></li>
                <li data-target="#carouselSpaceXCrew" data-slide-to="1"></li>
                <li data-target="#carouselSpaceXCrew" data-slide-to="2"></li>
                <li data-target="#carouselSpaceXCrew" data-slide-to="3"></li>
                <li data-target="#carouselSpaceXCrew" data-slide-to="4"></li>
                <li data-target="#carouselSpaceXCrew" data-slide-to="5"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://www.nasa.gov/sites/default/files/thumbnails/image/nw-2020-07-010-jsc_iss_crew-1_poster_72_dpi.png" style="height:50%;width:50%;">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                @foreach (var person in crewList)
                {
                    <div class="carousel-item">
                        <img src="@person.Image" style="height:50%;width:50%;">
                        <div class="carousel-caption d-none d-md-block">
                            <h3><b>Name: </b>@person.Name</h3>
                            <p><b>Agency: </b>@person.Agency</p>
                        </div>
                    </div>
                }
            </div>
            @*<a class="carousel-control-prev" href="#carouselSpaceXCrew" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselSpaceXCrew" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>*@
        </div>
    </div>

    <div class="sourceAPI">
        <small>
            <b>Source:</b>
            <a target="_blank" href="@sourceAPI">@sourceAPI</a>
        </small>
    </div>

</div>
